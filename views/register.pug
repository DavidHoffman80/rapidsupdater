extends layout

block content
  .main.container-fluid.row
    .col-md-6.col-md-offset-3
      h1.mainHeading Sign Up
    
      //Register form
      form(method='POST' action='/register')
        div.form-group
          label(for='firstName') First Name:
          input#name.form-control(type='text', placeholder='First Name' name='firstName')
        div.form-group
          label(for='lastName') Last Name:
          input#name.form-control(type='text', placeholder='Last Name' name='lastName')
        div.form-group
          label(for='email') E-mail:
          input#email.form-control(type='text', placeholder='name@email.com' name='email')
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password', name='password')
        div.form-group
          label(for='firstName') Confirm Password:
          input#pw2.form-control(type='password', name='confirmPassword')
        button.btn.btn-primary(type='submit') Sign up
          