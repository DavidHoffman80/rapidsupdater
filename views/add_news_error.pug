extends layout

block content
  .main.container-fluid
    .col-md-6.col-md-offset-3
      if errors
        each error, i in errors
          div(class='alert alert-danger messageCont') #{error.msg}
      h1.mainHeading.display-3 #{title}
      form(method='POST', action='/news/add')
        #form-group.mt-2
          label Title:
          input.form-control(name='title', type='text', value=article.title)
        #form-group.mt-2
          label Body:
          textarea.form-control(name='body')= article.body
        input.btn.btn-primary.mt-2(type='submit', value='Submit')