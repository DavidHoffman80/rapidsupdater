extends layout

block content
  .main
    != messages('message', locals)
    .mainHeading
      h2= article.title
    .timestamp.mainContent
      h6= article.timestamp
    .mainInfo
      p.mainContent= article.body
    if article.articleImage
      .articleImage
        img.uploadedImage(src=article.articleImage, alt='Uploaded Image')
    .author.mainContent
      if profile
        if profile.profileImageName !== undefined
          img.authorAvatar(src=profile.profileImageName, alt='Avatar')
        else
          img.authorAvatar(src='/images/avatar.png', alt='Avatar')
      else
        img.authorAvatar(src='/images/avatar.png', alt='Avatar')
      h5 #{author}
    if user.id == article.author
      .buttonCont
        a.btn.btn-primary(href='/news/edit/'+article._id) Edit
        a.btn.btn-danger.cncl.delete-article(href='#', data-id=article._id) Delete