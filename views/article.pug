extends layout

block content
  .main.container-fluid
    .col-md-6.col-md-offset-3
      != messages('message', locals)
      h1.mainHeading.display-4= article.title
      h3.mainContent Posted by: #{author}
      p.mainContent= article.body
      hr
      if user.id == article.author
        a.btn.btn-primary.mr-2.mb-6(href='/news/edit/'+article._id) Edit
        a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete